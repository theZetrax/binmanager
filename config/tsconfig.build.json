{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*"],
      "@binmanager/*": ["*"],
      "@lib/*": ["lib/*"]
    },
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"]
}
