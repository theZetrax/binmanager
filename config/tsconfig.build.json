{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "../dist",
    "baseUrl": "../src",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@binmanager/*": ["*"],
      "@lib/*": ["lib/*"]
    },
    "moduleResolution": "Node"
  },
  "include": ["../src/**/*"]
}
