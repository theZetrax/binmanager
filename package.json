{
  "name": "binmanager",
  "version": "1.0.0",
  "description": "A simple way to manage your applications.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p config/tsconfig.build.json",
    "watch": "tsc -p config/tsconfig.build.json  -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "electron-forge start",
    "test": "jest",
    "prepare": "husky install",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [
    "Electron",
    "App Manager",
    "utility",
    "typescript"
  ],
  "author": "Zablon Dawit <contact@zetrax.io> (zetrax.io)",
  "repository": {
    "type": "git",
    "url": "https://github.com/theZetrax/binmanager"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "electron": "^15.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.2.4",
    "prettier": "2.4.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2"
  },
  "license": "Apache-2.0",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "binmanager"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
