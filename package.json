{
  "name": "binmanager",
  "version": "1.0.0",
  "description": "A simple way to manage your applications.",
  "main": ".webpack/main",
  "scripts": {
    "build": "tsc -p config/tsconfig.build.json",
    "watch": "tsc -p config/tsconfig.build.json  -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "build:start": "npm run build && electron-forge start",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "prepare": "husky install",
    "test": "jest"
  },
  "keywords": [
    "Electron",
    "App Manager",
    "utility",
    "typescript"
  ],
  "author": "Zablon Dawit <contact@zetrax.io> (zetrax.io)",
  "repository": {
    "type": "git",
    "url": "https://github.com/theZetrax/binmanager"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.61",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.0",
    "electron": "^15.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.20.0",
    "fork-ts-checker-webpack-plugin": "^6.3.3",
    "jest": "^27.2.4",
    "node-loader": "^2.0.0",
    "prettier": "2.4.1",
    "style-loader": "^3.3.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2"
  },
  "license": "Apache-2.0",
  "config": {
    "forge": {
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./config/webpack/webpack.main.config.js",
            "renderer": {
              "config": "./config/webpack/webpack.renderer.config.js",
              "entryPoints": [
                {
                  "name": "main_window",
                  "html": "./src/assets/index.html",
                  "js": "./src/renderer.ts"
                }
              ]
            }
          }
        ]
      ],
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "binmanager"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
